<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <FrameLayout
        android:id="@+id/frame_layout_forgotpass"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewClose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_close"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"></ImageView>

            <ImageView
                android:id="@+id/imageMailbox"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/mailbox"></ImageView>

            <TextView
                android:id="@+id/tvForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn quên mật khẩu?"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/neosansintel"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageMailbox"
                android:layout_marginTop="20dp"></TextView>

            <TextView
                android:id="@+id/tvFillEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điền email đăng ký của bạn ở bên dưới.\n Chúng tôi sẽ gửi cho bạn mã xác minh"
                android:textSize="18sp"
                android:fontFamily="@font/neosansintel"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvForgotPass"
                android:layout_marginTop="15dp"></TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtFieldEmailFP"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:hint="@string/txt_email"
                android:layout_below="@+id/tvFillEmail"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/red_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtEmailFP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSendCode"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/txtFieldEmailFP"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="40dp"
                android:text="Tiếp tục"
                android:textSize="18sp"
                android:fontFamily="@font/neosansintel"></Button>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>